<Window x:Class="PaswordCracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaswordCracker"
        mc:Ignorable="d"
        Title="Password Cracker" Height="470" Width="820">
    <Grid>
        <TextBox x:Name="password_box" HorizontalAlignment="Left" Height="20" Margin="112,10,0,0" Text="pass" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Rectangle HorizontalAlignment="Center" Height="333" Margin="0,35,0,0" Stroke="Black" VerticalAlignment="Top" Width="780"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="20" Margin="10,10,0,0" Text="Enter a password:" TextWrapping="Wrap" VerticalAlignment="Top" Width="123"/>
        <TextBlock x:Name="hash_box" HorizontalAlignment="Left" Height="20" Margin="317,10,0,0" Text="Your SHA-1 hash:" TextWrapping="Wrap" VerticalAlignment="Top" Width="473"/>
        <Button x:Name="stop_button" Content="Stop" HorizontalAlignment="Left" Height="30" Margin="426,384,0,0" VerticalAlignment="Top" Width="128" MouseUp="stop_button_MouseUp"/>
        <Button x:Name="crack_button" Content="Begin Crack" HorizontalAlignment="Left" Height="30" Margin="273,384,0,0" VerticalAlignment="Top" Width="127" MouseUp="crack_button_MouseUp" />
        <TextBlock x:Name="textBlock1" TextWrapping="Wrap" HorizontalAlignment="Center" Height="332" Margin="0,36,0,0" Text="TextBlock" VerticalAlignment="Top" Width="780"/>
    </Grid>
</Window>
