<Window x:Class="PaswordCracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaswordCracker"
        mc:Ignorable="d"
        Title="Password Cracker" Height="470" Width="1140">
    <Grid Margin="0,0,0,-16">
        <TextBox x:Name="password_box" HorizontalAlignment="Left" Height="23" Margin="129,10,0,0" Text="pass" TextWrapping="Wrap" VerticalAlignment="Top" Width="103" FontSize="14" RenderTransformOrigin="0.543,0.643"/>
        <ScrollViewer x:Name="scroller" Margin="20,73,20,102">
            <TextBlock x:Name="output_text" TextWrapping="Wrap" Height="Auto" Text="" Width="1068"/>
        </ScrollViewer>
        <TextBlock x:Name="text_block" HorizontalAlignment="Left" Height="20" Margin="10,10,0,0" Text="Enter a password:" TextWrapping="Wrap" VerticalAlignment="Top" Width="114" FontSize="14"/>
        <TextBlock x:Name="hash_box" HorizontalAlignment="Left" Height="20" Margin="248,10,0,0" Text="Your SHA-1 hash:" TextWrapping="Wrap" VerticalAlignment="Top" Width="872" FontSize="14"/>
        <TextBlock x:Name="output_info" HorizontalAlignment="Left" Height="20" Margin="10,38,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="762" FontSize="14"/>
        <Button x:Name="crack_button" Content="Begin Crack" HorizontalAlignment="Center" Height="30" Margin="0,384,0,0" VerticalAlignment="Top" Width="128" Click="crackButtonClick" />
        <Border BorderThickness="2" BorderBrush="Black" HorizontalAlignment="Center" Height="297" Margin="0,72,0,0" VerticalAlignment="Top" Width="1100"/>
        <TextBlock x:Name="foundpasswordtextbox" HorizontalAlignment="Left" Height="20" Margin="800,38,0,0" Text="Found Password: " TextWrapping="Wrap" VerticalAlignment="Top" Width="300" FontSize="14"/>

    </Grid>
</Window>
